    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },

        {
            "name": "Python: Debugfile",
            "type": "python",
            "request": "launch",
            "program": "./debug.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },        
        {
            "name": "Backend Remote",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "192.168.1.11",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Celery Remote",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "192.168.1.11",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        }
    ]
}